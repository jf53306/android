<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jf.jlistview.MainActivity">

    <Button
        android:id="@+id/view_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RefreshView"
        android:textAllCaps="false"/>



    <Button
        android:id="@+id/view_super"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SuperList"
        android:textAllCaps="false"
         />

    <Button
        android:id="@+id/view_auto_hind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SuperList"
        android:textAllCaps="false"
        android:onClick="openAutoHind"
        />

</LinearLayout>
